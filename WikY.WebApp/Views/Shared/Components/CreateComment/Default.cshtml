@model CreateCommentViewModel

<form asp-action="Create" asp-controller="Comment" class="w-75">
    <div class="form-group">
        <input type="hidden" asp-for="@Model.Comment.ArticleId" value="@Model.Comment.ArticleId" />
        <label asp-for="@Model.Comment.Content" class="control-label">Contenu</label>
        <input type="text"
               asp-for="@Model.Comment.Content"
               class="form-control"
               placeholder="Entrez un contenu"
               required />
        <span asp-validation-for="@Model.Comment.Content" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <label asp-for="@Model.Comment.AuthorId" class="control-label">Auteur</label>
        <select asp-for="@Model.Comment.AuthorId">
            @for (int i = 0; i < Model.Authors.Count; i++)
            {
                <option value="@Model.Authors[i].Id"><text>@Model.Authors[i].FirstName @Model.Authors[i].LastName</text></option>
            }
        </select>
        <span asp-validation-for="@Model.Comment.Author" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-evenly mt-4">
        <input type="submit" value="Valider" class="btn btn-primary" />
        <a asp-action="Details" asp-controller="Article" asp-route-id="@Model.Comment.ArticleId" class="btn btn-secondary">Retour</a>
    </div>
</form>