@using WikY.Entities.Authors

@model List<Author>

<form id="create-comment-ajax-form" class="w-75">
    <div class="form-group">
        <label class="control-label">Contenu</label>
        <input type="text"
               name="content"
               class="form-control"
               placeholder="Entrez un contenu"
               required />
    </div>

    <div class="form-group mt-4">
        <label for="author" class="control-label">Auteur</label>
        <select name="author">
            @for (int i = 0; i < Model.Count; i++)
            {
                <option value="@Model[i].Id"><text>@Model[i].FirstName @Model[i].LastName</text></option>
            }
        </select>
    </div>

    <div class="d-flex justify-content-evenly mt-4">
        <input type="submit" value="Valider" class="btn btn-primary" />
    </div>
</form>